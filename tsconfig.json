{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // добавляем корневую директорию
    "paths": {
      "@/*": [
        "./src/*"
      ] // или для папки src
       // алиас для корня проекта
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/app/api/email/route.js",
    "src/libs/prismadb.js",
    "src/actions/makes.js",
    "src/components/navbar/Navbar.tsx",
    "src/app/[country]/layout.tsx",
    "src/components/navbar/index.ts",
    "src/components/ListItem/ui/ListItem.jsx",
    "src/containers/banner/icons/RatingIcon.tsx",
    "src/actions/models.js",
    "src/components/*",
    "src/app/[country]/search.zip/entities/SearchCard/ui/SearchCard.tsx",
    "src/app/[country]/search.zip/entities/SearchCard/ui/SearchCardMobile.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
